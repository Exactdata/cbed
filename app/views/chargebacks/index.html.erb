<div class="page-header">
  <h1>
    Chargebacks
    <a href="/chargebacks/new" class="btn btn-lg btn-success">New Chargeback</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date received</th>
        <th>Date transacted</th>
        <th>Contact name</th>
        <th>Account name</th>
        <th>Salesperson</th>
        <th>Credit card</th>
        <th>Amount</th>
        <th>Io</th>
        <th>Case number</th>
        <th>Reason</th>
        <th>Date due</th>
        <th>Date responded</th>
        <th>Status</th>
        <th>Notes</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @chargebacks.each do |chargeback| %>
      <tr>
        <td><%= chargeback.date_received %></td>
        <td><%= chargeback.date_transacted %></td>
        <td><%= chargeback.contact_name %></td>
        <td><%= chargeback.account_name %></td>
        <td><%= chargeback.salesperson.first_name %></td>
        <td><%= chargeback.credit_card_id %></td>
        <td><%= chargeback.amount %></td>
        <td><%= chargeback.io %></td>
        <td><%= chargeback.case_number %></td>
        <td><%= chargeback.reason_id %></td>
        <td><%= chargeback.date_due %></td>
        <td><%= chargeback.date_responded %></td>
        <td><%= chargeback.status_id %></td>
        <td><%= chargeback.notes %></td>
        <td><%= chargeback.user_id %></td>
        <td>
          <a href="/chargebacks/<%= chargeback.id %>" class="btn btn-primary">Show</a>
          <a href="/chargebacks/<%= chargeback.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_chargeback/<%= chargeback.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
