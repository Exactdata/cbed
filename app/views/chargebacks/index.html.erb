<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date received</th>
        <th>Date transacted</th>
        <th>Contact name</th>
        <th>Account name</th>
        <th>Salesperson</th>
        <th>Credit card</th>
        <th>Amount</th>
        <th>Io</th>
        <th>Case number</th>
        <th>Reason</th>
        <th>Date due</th>
        <th>Date responded</th>
        <th>Status</th>
        <th>Notes</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @chargebacks.each do |chargeback| %>
      <tr>
        <td><%= chargeback.date_received %></td>
        <td><%= chargeback.date_transacted %></td>
        <td><%= chargeback.contact_name %></td>
        <td><%= chargeback.account_name %></td>
        <td>
          <% if chargeback.salesperson.present? %>
            <a href="/salespeople/<%= chargeback.salesperson.id %>">
              <%= chargeback.salesperson.first_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if chargeback.credit_card.present? %>
            <a href="/credit_cards/<%= chargeback.credit_card.id %>">
              <%= chargeback.credit_card.type %>
            </a>
          <% end %>
        </td>
        <td><%= chargeback.amount %></td>
        <td><%= chargeback.io %></td>
        <td><%= chargeback.case_number %></td>
        <td>
          <% if chargeback.reason.present? %>
            <a href="/reasons/<%= chargeback.reason.id %>">
              <%= chargeback.reason.reason %>
            </a>
          <% end %>
        </td>
        <td><%= chargeback.date_due %></td>
        <td><%= chargeback.date_responded %></td>
        <td>
          <% if chargeback.status.present? %>
            <a href="/statuses/<%= chargeback.status.id %>">
              <%= chargeback.status.status %>
            </a>
          <% end %>
        </td>
        <td><%= chargeback.notes %></td>
        <td>
          <% if chargeback.user.present? %>
            <a href="/users/<%= chargeback.user.id %>">
              <%= chargeback.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/chargebacks/<%= chargeback.id %>" class="btn btn-primary">Show</a>
          <a href="/chargebacks/<%= chargeback.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_chargeback/<%= chargeback.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @chargebacks, theme: 'twitter-bootstrap-4' %>
  </div>
