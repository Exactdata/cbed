                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#date_receivedgteqPicker').on("dp.change", function (e) {
                  $('#date_receivedlteqPicker').data("DateTimePicker").minDate(e.date);
              });
