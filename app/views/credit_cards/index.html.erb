<div class="page-header">
  <h1>
    Credit cards
    <a href="/credit_cards/new" class="btn btn-lg btn-success">New Credit card</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Type</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.type %></td>
        <td><%= credit_card.description %></td>
        <td>
          <a href="/credit_cards/<%= credit_card.id %>" class="btn btn-primary">Show</a>
          <a href="/credit_cards/<%= credit_card.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_credit_card/<%= credit_card.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @credit_cards, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
