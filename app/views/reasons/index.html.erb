<div class="page-header">
  <h1>
    Reasons
    <a href="/reasons/new" class="btn btn-lg btn-success">New Reason</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "reasons_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :reason_cont, "Reason contains" %>
    <%= f.text_field :reason_cont, :class => "form-control", :placeholder => "Reason contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :date_received, "Chargeback Date received" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='chargebacksgteqdate_receivedPicker'>
                  <%= f.text_field :chargebacks_date_received_gteq, :class => "form-control", :placeholder => "Chargeback Date received greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='chargebackslteqdate_receivedPicker'>
                  <%= f.text_field :chargebacks_date_received_lteq, :class => "form-control", :placeholder => "Chargeback Date received less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#chargebacksgteqdate_receivedPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#chargebackslteqdate_receivedPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#chargebacksgteqdate_receivedPicker').on("dp.change", function (e) {
                  $('#chargebackslteqdate_receivedPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#chargebackslteqdate_receivedPicker').on("dp.change", function (e) {
                  $('#chargebacksgteqdate_receivedPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/reasons" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#reasons_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Reason</th>
        <th>Actions</th>
      </tr>

      <% @reasons.each do |reason| %>
      <tr>
        <td><%= reason.reason %></td>
        <td>
          <a href="/reasons/<%= reason.id %>" class="btn btn-primary">Show</a>
          <a href="/reasons/<%= reason.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_reason/<%= reason.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @reasons, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
