<div class="page-header">
  <h3>Reason #<%= @reason.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Reason</dt>
      <dd><%= @reason.reason %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reasons" class="btn btn-primary">
        Back
      </a>
      <a href="/reasons/<%= @reason.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_reason/<%= @reason.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Reason has many chargebacks -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Chargebacks
      </li>

      <% @reason.chargebacks.each do |chargeback| %>
        <li class="list-group-item">
          <a href="/chargebacks/<%= chargeback.id %>">
            <%= chargeback.date_received %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/chargebacks/<%= chargeback.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/chargebacks/<%= chargeback.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_chargeback/<%= chargeback.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
