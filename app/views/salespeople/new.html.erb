<!-- Validation failure messages -->
<% if @salesperson.errors.any? %>
  <% @salesperson.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Salesperson</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_salesperson" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="control-label">
          First name
        </label>

        <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @salesperson.first_name %>">
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="control-label">
          Last name
        </label>

        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @salesperson.last_name %>">
      </div>

      <!-- Label and input for sugar_user_id -->
      <div class="form-group">
        <label for="sugar_user_id" class="control-label">
          Sugar user
        </label>

        <input type="text" id="sugar_user_id" name="sugar_user_id" placeholder="Sugar user" class="form-control" value="<%= @salesperson.sugar_user_id %>">
      </div>

      <button class="btn btn-success">
        Create Salesperson
      </button>
      or
      <a href="/salespeople">Cancel</a>
    </form>
  </div>
</div>
